<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.micovid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="App Covid"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiCovid"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".juego.GameOverActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".juego.GameActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".pantallaprincipal.PantallaInicioActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".login.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".registrar.RegistrarActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".actividadprincipal.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>